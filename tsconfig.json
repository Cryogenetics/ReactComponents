{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["es2020", "dom"],
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "removeComments": true,
    "noImplicitAny": true,
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "jsx": "react"
  },
  "exclude": [
    "node_modules"
  ]
}
